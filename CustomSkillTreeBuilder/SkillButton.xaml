<Button x:Class="CustomSkillTreeBuilder.SkillButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:CustomSkillTreeBuilder"
        mc:Ignorable="d" 
        d:DesignHeight="300" d:DesignWidth="300"
        Width="64" Height="64"
        DataContext="{StaticResource SkillButtonViewModel}"
        MouseMove="OnMouseMove"       
        Loaded="OnLoaded" 
        RenderTransformOrigin="0.5,0.5">
  <Button.Template>
    <ControlTemplate >
      <Grid>
        <Ellipse>
          <Ellipse.Fill>
            <ImageBrush ImageSource="{Binding Image}"/>
          </Ellipse.Fill>
        </Ellipse>
        <TextBlock Text="{Binding Skill.Name}" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,-10" Background="White"/>
      </Grid>
    </ControlTemplate>
  </Button.Template>
  <Button.ContextMenu>
    <ContextMenu>
      <MenuItem Header="Connect" />
      <MenuItem Header="Delete"/>
    </ContextMenu>
  </Button.ContextMenu>
</Button>
